---
import type { AdSetPerformance } from '@/types';

export interface Props {
  adSets: AdSetPerformance[];
  title?: string;
}

const { adSets, title = "Top Ad Sets by Spend" } = Astro.props;

function formatCurrency(amount: number): string {
  return new Intl.NumberFormat('en-US', {
    style: 'currency',
    currency: 'USD',
    minimumFractionDigits: 2,
  }).format(amount);
}

function formatPercentage(value: number): string {
  return `${value.toFixed(1)}%`;
}

function getChangeStyle(change?: number): string {
  if (!change) return 'text-gray-500';
  return change > 0 ? 'text-danger-600' : 'text-success-600';
}

function getPlatformBadge(platform: string): string {
  switch (platform) {
    case 'google':
      return 'bg-blue-100 text-blue-800';
    case 'facebook':
      return 'bg-indigo-100 text-indigo-800';
    default:
      return 'bg-gray-100 text-gray-800';
  }
}
---

<div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
  <div class="px-6 py-4 border-b border-gray-200">
    <h3 class="text-lg font-medium text-gray-900">{title}</h3>
  </div>
  
  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Ad Set
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Platform
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Spend
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Conversions
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            CPA
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Change
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            CTR
          </th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        {adSets.map((adSet) => (
          <tr class="hover:bg-gray-50 transition-colors">
            <td class="px-6 py-4 whitespace-nowrap">
              <div>
                <div class="text-sm font-medium text-gray-900 max-w-xs truncate" title={adSet.name}>
                  {adSet.name}
                </div>
                <div class="text-sm text-gray-500">
                  ID: {adSet.id}
                </div>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class={`inline-flex px-2 py-1 text-xs font-semibold rounded-full ${getPlatformBadge(adSet.platform)}`}>
                {adSet.platform}
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 font-medium">
              {formatCurrency(adSet.spend)}
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              {adSet.conversions.toLocaleString()}
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 font-medium">
              {formatCurrency(adSet.costPerConversion)}
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm">
              {adSet.changePercent !== undefined ? (
                <span class={getChangeStyle(adSet.changePercent)}>
                  {adSet.changePercent > 0 ? '+' : ''}{formatPercentage(adSet.changePercent)}
                </span>
              ) : (
                <span class="text-gray-400">-</span>
              )}
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              {formatPercentage(adSet.clickThroughRate)}
            </td>
          </tr>
        ))}
      </tbody>
    </table>
    
    {adSets.length === 0 && (
      <div class="text-center py-12">
        <div class="text-gray-400 text-lg mb-2">ðŸ“Š</div>
        <h3 class="text-sm font-medium text-gray-900 mb-1">No ad sets found</h3>
        <p class="text-sm text-gray-500">Upload your marketing data to see performance metrics.</p>
      </div>
    )}
  </div>
</div>